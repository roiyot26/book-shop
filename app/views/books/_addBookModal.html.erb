<%# <h1>Add a New Book</h1> %>

<%= form_with model: book, url: books_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Book Name" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :author, "Author" %>
    <%= form.text_field :author, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :rent_price, "Rent Price ($)" %>
    <%= form.number_field :rent_price, class: "form-control", step: 1, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :image_url, "Image URL (Optional)" %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :is_available, "Available for Rent?" %>
    <%= form.check_box :is_available %>
  </div>

  <%= form.submit "Add Book", class: "btn submit" %>
<% end %>
